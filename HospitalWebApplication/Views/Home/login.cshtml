@model User
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="row justify-content-center"> 
            <div class="col-md-6 col-lg-5">
                <div class="card shadow rounded-4">
                    <div class="card-body p-4">
                        <h3 class="text-center mb-4">Login</h3>

                        <!-- Razor form using asp-action and asp-controller -->
                        <form asp-action="Login" asp-controller="Home" method="post">
                            <!-- Email -->
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Remember Me and Forgot -->
                           

                            <!-- Submit -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary rounded-pill">Login</button>
                            </div>
                        </form>

                    </div>
                </div>
                <p class="text-center mt-3 text-muted">
                    Don't have an account? <a href="/Account/Register" class="text-primary text-decoration-none">Sign up</a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

