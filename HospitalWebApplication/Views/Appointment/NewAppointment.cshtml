@model HospitalWebApplication.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}

<h2 class="text-center my-4">Create Appointment</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Dear Applicant, please fill the form below to get an instant appointment.
                    </p>

                    <form asp-controller="Appointment" asp-action="NewAppointment" method="post">
                        <div class="mb-3">
                            <label asp-for="PatientName" class="form-label">Patient Name</label>
                            <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label">Appointment Date</label>
                            <input asp-for="AppointmentDate" class="form-control" type="date" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Select Disease</label>
                            <select class="form-select" asp-for="Notes">
                                <option value="">-- Select Disease --</option>
                                @foreach (var item in ViewBag.DiseaseList)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        @* Hidden Fields *@
                        @Html.HiddenFor(model => model.AppointmentId)
                        @Html.HiddenFor(model => model.PatientId)
                        @Html.HiddenFor(model => model.DoctorId)

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Save Appointment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
