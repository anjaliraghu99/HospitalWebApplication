@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
            <h3 class="text-center mb-3">Create Account</h3>
            <form asp-action="CreateUser" asp-controller="Patient" method="post">
                <!-- Email -->
                <div class="d-none">
                    <label asp-for="UserId" class="form-label">UserId</label>
                    <input asp-for="UserId" class="form-control" placeholder="" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Username</label>
                    <input asp-for="Email" class="form-control" placeholder="" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-none">
                    <label asp-for="UserRoleId" type="hidden" class="form-label">UserRoleId</label>
                    <input asp-for="UserRoleId" class="form-control" placeholder="" />
                    <span asp-validation-for="UserRoleId" class="text-danger"></span>
                </div>



                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="UserRoleCode" class="form-label">UserRole</label>
                    <input asp-for="UserRoleCode" class="form-control" placeholder="" />
                    <span asp-validation-for="UserRoleCode" class="text-danger"></span>
                </div>

                <!-- Remember Me and Forgot -->
                <!-- Submit -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary rounded-pill">Resigter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
